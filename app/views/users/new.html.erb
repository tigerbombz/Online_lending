<% end %>
<%= form_for @borrower, :url => { controller: 'sessions', :action => "create_borrower" } do |f| %>
  <%= f.label 'email' %>
  <%= f.text_field :email %><br>
  <%= f.label 'password' %>
  <%= f.password_field :password %><br>
  <%= submit_tag 'Log In' %>
<% end %>
